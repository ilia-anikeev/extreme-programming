<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/feed_navigation_graph"
  app:startDestination="@id/navigation_feed">

  <fragment
    tools:layout="@layout/fragment_feed"
    android:id="@+id/navigation_feed"
    android:name="ru.hse.listmanager.ui.listmanager.feed.ListsFragment">
    <action
      android:id="@+id/action_navigation_feed_to_postFragment"
      app:destination="@id/navigation_post_details" />
  </fragment>
  <fragment
    tools:layout="@layout/fragment_list"
    android:id="@+id/navigation_post"
    android:name="ru.hse.listmanager.ui.listmanager.feed.post.PostFragment" />
  <fragment
    android:label="Details"
    tools:layout="@layout/fragment_list_details"
    android:id="@+id/navigation_post_details"
    android:name="ru.hse.listmanager.ui.listmanager.feed.post.PostDetailsFragment" />
  <fragment
    android:label="Notes"
    tools:layout="@layout/fragment_post_notes"
    android:id="@+id/navigation_post_notes"
    android:name="ru.hse.listmanager.ui.listmanager.feed.post.PostNotesFragment" />
</navigation>
