<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white">


  <LinearLayout
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
      android:layout_gravity="center_horizontal"
      android:id="@+id/add_country_and_cities_title"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="Add new note"
      android:textColor="@color/black"
      android:textSize="18sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/noteHeadline"
        android:textStyle="bold"
        android:layout_width="77dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:text="Headline" />

      <EditText
        android:id="@+id/noteHeadlineEditText"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:hint="Enter headline"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    </LinearLayout>
    <LinearLayout
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/notePlace"
        android:textStyle="bold"
        android:layout_width="77dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:text="Place:" />

      <EditText
        android:id="@+id/notePlaceEditText"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:hint="Enter place"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    </LinearLayout>

    <LinearLayout
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/noteText"
        android:textStyle="bold"
        android:layout_width="77dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:text="Note:" />

      <EditText
        android:id="@+id/noteTextEditText"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:inputType="text|textMultiLine"
        android:gravity="top" />

    </LinearLayout>
    <LinearLayout
      android:padding="10dp"
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Add photo:" />

      <ImageView
        android:layout_marginStart="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_add_photo_alternate_24" />

    </LinearLayout>

    <Button
      android:layout_gravity="center"
      android:id="@+id/popup_add_note"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="28dp"
      android:layout_marginBottom="30dp"
      android:text="Add new note"
      android:background="@drawable/button" />

  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>